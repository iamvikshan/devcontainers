{
  "scripts": {
    "f": "prettier --write \"**/*.*\"",
    "s": "bun scripts/changelogManager.ts --sync-only",
    "sync-sizes": "bun scripts/changelogManager.ts --sync-only",
    "update-versions": "bun scripts/changelogManager.ts",
    "rs": "bun f && git push -f",
    "check-updates": "bun scripts/checkImages.ts",
    "check-base-images": "bun scripts/checkImages.ts",
    "check-base-images-json": "bun scripts/checkImages.ts --comprehensive --json-only",
    "validate-check-images": "node scripts/validateCheckImages.js",
    "analyze-sizes": "bun scripts/imageOperations.ts --analyze-sizes",
    "build-all": "./scripts/build-all-images.sh",
    "build-bun": "docker build -f base/bun/.devcontainer/Dockerfile -t devcontainers/bun:test base/bun/.devcontainer",
    "build-bun-node": "docker build -f base/bun-node/.devcontainer/Dockerfile -t devcontainers/bun-node:test base/bun-node/.devcontainer",
    "build-ubuntu-bun": "docker build -f base/ubuntu/bun/Dockerfile -t devcontainers/ubuntu-bun:test base/ubuntu/bun",
    "build-ubuntu-bun-node": "docker build -f base/ubuntu/bun-node/Dockerfile -t devcontainers/ubuntu-bun-node:test base/ubuntu/bun-node",
    "build-gitpod-bun": "docker build -f gitpod/bun/Dockerfile -t devcontainers/gitpod-bun:test gitpod/bun",
    "build-gitpod-bun-node": "docker build -f gitpod/bun-node/Dockerfile -t devcontainers/gitpod-bun-node:test gitpod/bun-node",
    "build-gitpod-ubuntu-bun": "docker build -f gitpod/ubuntu-bun/Dockerfile -t devcontainers/gitpod-ubuntu-bun:test gitpod/ubuntu-bun",
    "build-gitpod-ubuntu-bun-node": "docker build -f gitpod/ubuntu-bun-node/Dockerfile -t devcontainers/gitpod-ubuntu-bun-node:test gitpod/ubuntu-bun-node",
    "verify-docker": "./scripts/verify-docker-setup.sh",
    "test-workflows": "bun scripts/test-workflow-steps.ts",
    "test-workflow-logic": "bun scripts/test-workflow-logic.ts",
    "test-workflow-simulation": "bun scripts/test-workflow-simulation.ts",
    "release-check": "bun scripts/releaseOrchestrator.ts",
    "release-check-workflow": "bun scripts/releaseOrchestrator.ts --workflow",
    "extract-tool-versions": "bun scripts/toolVersionExtractor.ts",
    "create-issue": "bun scripts/issueManager.ts",
    "analyze-changes": "bun scripts/changeDetector.ts"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "axios": "^1.12.2",
    "node-fetch": "^3.3.2",
    "prettier": "^3.6.2",
    "prettier-plugin-sh": "^0.14.0"
  }
}
